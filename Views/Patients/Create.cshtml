@model NETD3202_ASasitharan_Lab5_Comm2.Models.Patient

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Patient</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="patientfname" class="control-label">Patient First Name</label>
                <input asp-for="patientfname" class="form-control" required="required" />
                <span asp-validation-for="patientfname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="patientlname" class="control-label">Patient Last Name</label>
                <input asp-for="patientlname" class="form-control" required="required" />
                <span asp-validation-for="patientlname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="patientphone" class="control-label">Patient Phone Number</label>
                <input asp-for="patientphone" class="form-control" required="required" />
                <span asp-validation-for="patientphone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
